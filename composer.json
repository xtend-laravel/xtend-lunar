{
    "name": "xtend-laravel/xtend-lunar",
    "authors": [
        {
            "name": "Adam Lee",
            "email": "adam@codelabx.ltd",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/xtend-laravel/xtend-lunar",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0|^10.0",
        "xtend-laravel/feature-lunar-form-builder": "*",
        "xtend-laravel/feature-lunar-notify-timeline": "*",
        "xtend-laravel/feature-lunar-manage-carts": "*",
        "xtend-laravel/feature-lunar-product-features": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.2",
        "pestphp/pest": "^1.2",
        "pestphp/pest-plugin-laravel": "^1.4",
        "phpunit/phpunit": "^10.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./features/*",
            "symlink": true
        }
    ],
    "autoload": {
        "psr-4": {
            "Xtend\\Extensions\\Lunar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xtend\\Extensions\\Lunar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
